<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/DefaultActionBarStyle</item>
        <item name="actionBarSize">40dp</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@color/DefaultBackColor</item>
    </style>

    <style name="DefaultActionBarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/DefaultBackColor</item>
    </style>


    <drawable name="DefaultDrawable">@color/DefaultBackColor</drawable>
    <drawable name="WeatherGoodDrawable">@color/WeatherGoodBackColor</drawable>
    <drawable name="WeatherBadDrawable">@color/WeatherBadBackColor</drawable>


    <color name="DefaultBackColor">#ffffffff</color>
    <color name="WeatherGoodBackColor">#ff0080ff</color>
    <color name="WeatherBadBackColor">#ff808080</color>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
